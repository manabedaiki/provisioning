root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.cs]
# TODO: https://docs.microsoft.com/en-us/visualstudio/ide/editorconfig-code-style-settings-reference

[*.css]
indent_size = 2

[*.csproj]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sln]
indent_style = tab

[Makefile]
indent_style = tab
