#!/bin/bash

set -e
set -u

{
    echo $'NAME\tDRIVER\tSCOPE'
    docker volume ls --format=$'{{.Name}}\t{{.Driver}}\t{{.Scope}}'
} | column -ts $'\t' | fzf \
    --header-lines=1 \
    --bind="\
enter:execute(docker volume inspect \$(cut -d ' ' -f 1 <<<{}) | jq -C . | less),\
ctrl-d:execute-silent(docker volume rm \$(cut -d ' ' -f 1 <<<{}))"
